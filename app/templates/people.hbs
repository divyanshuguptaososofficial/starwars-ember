<div class="grid">
  <div class="left-panel">
    <label for="search-box">Search:</label>
    <Input id="search-box" type="text" placeholder="Search People" class="search-box" {{on "input" this.searchPeople}}/>
    <ul class="list">
      {{#each @model.people as |p|}}
        <li><LinkTo @route="people.show" @model={{p}}>{{p.name}}</LinkTo></li>
      {{/each}}
    </ul>
  </div>
  <div class="right-panel">
    {{outlet}}
  </div>
</div>
